%ul{class: "nav nav-tabs"}
  %li{class: (params[:controller] == 'sauces' || params[:controller] == 'reviews') ? 'active' : ''}
    %a{href: sauces_path} Sauces
  %li{class: (params[:controller] == 'manufacturers') ? 'active' : ''}
    %a{href: manufacturers_path} Manufacturers
  %li{class: (params[:controller] == 'flavors') ? 'active' : ''}
    %a{href: flavors_path} Flavors
  %li{class: 'right'}
    - if admin_signed_in?
      =link_to "Log Out", destroy_admin_session_path(@current_admin), method: :delete
    - elsif user_signed_in?
      =link_to "Log Out", destroy_user_session_path(@current_user), method: :delete
    - else
      %a{href: new_user_session_path} Log In User
      %a{href: new_admin_session_path} Log In Admin
