%h1 Sauces
%table
  %tbody
    - @sauces.each do |sauce|
      %tr
        %td=sauce.name
        %td=sauce.manufacturer.name
        %td
          %a{href: sauce_path(sauce)} Show
        %td
          %a{href: edit_sauce_path(sauce)} Edit
        %td
          =button_to "Delete", sauce, :method => :delete
%a{href: new_sauce_path} Add New Sauce

= render 'shared/menu'
